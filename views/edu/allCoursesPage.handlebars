<form action='/search/searchcourses' method="POST">
    <label class="labelclass">
        Search for courses
        <input type="text" name="courseSearchTerm" required="" />
    </label>
    <button type="submit" name ="Submit"> Search </button>
</form>
{{#if search}}
    <h1 class="resultH1">Following are the results for "{{courseSearchTerm}}"</h1>
    {{#if hasError}}
    <p class="notFound">{{error}}</p>
    {{/if}}
{{/if}}

<br>

<div class="row">
    <div class="col-sm-12">
     <div style="margin-left: 25px;">
    {{#data}}    
     <a href="/course/{{{courseName}}}">{{courseName}}</a>
     <p id={{_id}}>{{description}}</p>
     {{/data}}   
     </div>      
    </div>
</div>

