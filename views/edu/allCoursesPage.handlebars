<h2>List of All Courses</h2>

{{> navbar this}}

<form action='/search/searchcourses' method="POST">
    <label class="labelclass">
        Search for courses
        <input type="text" name="courseSearchTerm" />
    </label>
    <button type="submit" name ="Submit" required="" > Search </button>
</form>
{{#if search}}
    <h2 class="resultH2">Following are the results for "{{courseSearchTerm}}"</h2>
    {{#if hasError}}
    <p class="notFound">{{error}}</p>
    {{/if}}
{{/if}}
<br>
<div class="row">
    <div class="col-sm-12">
     <div style="margin-left: 25px;">
    {{#data}}    
     <a class = "course" href="/course/{{{courseName}}}">{{courseName}}</a>
     <p id={{_id}}>{{description}}</p>
     {{/data}}   
     </div>      
    </div>
</div>

